set editor='$HOME/bin/vimperator-editor'

set defsearch='duckduckgo'
set complete='l'
set showstatuslinks=2

set tabnumbers
set animations
set noscrollbars

noremap <C-p> <none>
noremap <C-n> <none>
noremap <C-o> <none>
noremap <C-i> <none>

"up/down on the page
noremap n j
noremap e k

"left/right on the page
noremap s h
noremap t l

"forward & backward in the history stack
noremap S H
noremap T L

"create new tabs
noremap h t
noremap H T

"cycle througth tabs
noremap E gT
noremap N gt

"re-search
noremap K N
noremap k n

command! fb emenu Tools.Firebug.Open Firebug
command! vs viewsource

command! google open http://www.google.com <args>
command! wiki open http://wikipedia.org <args>
command! tw open http://twitter.com
command! Tw tabopen http://twitter.com
command! dev open http://localhost:3000
command! Dev tabopen http://localhost:3000
command! gems open file:///usr/local/ruby-1.9.3-p194/lib/ruby/gems/1.9.1/doc
command! pydoc open file:///usr/share/doc/python2.7/html/index.html
